{
  "manifest_version": 2,

  "name": "BlockThat",
  "description": "This extension will block a site forever.",
  "version": "1.01",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]

}
